function words(x = undefined) {
    // if no argument, terminate and return the collected string
    if (x === undefined) {
      return "";
    }
  
    return function next(y = undefined) {
      if (y === undefined) {
        return `"${x}"`; // wrap the result in quotes
      }
      // keep chaining: pass accumulated string forward
      return words(x + " " + y);
    };
  }
  

console.log(words('hello')('fark')('test')('b')())
